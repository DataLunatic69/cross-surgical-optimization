# .env.example (commit this to git)
# Application
APP_NAME=Surgical-Optimizer
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production
API_V1_PREFIX=/api/v1

# Database
DATABASE_URL=postgresql://surgical_admin:surgical_secure_pwd_2024@localhost:5435/surgical_optimizer_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis
REDIS_URL=redis://:surgical_redis_2024@localhost:6381/0
REDIS_POOL_SIZE=10
REDIS_DECODE_RESPONSES=true

# Federated Learning
FL_SERVER_ADDRESS=0.0.0.0:8080
FL_NUM_ROUNDS=10
FL_MIN_CLIENTS=2
FL_FRACTION_FIT=1.0
FL_FRACTION_EVAL=1.0

# Model Configuration
MODEL_NAME=medalpaca/medalpaca-7b
MODEL_QUANTIZATION=4
MODEL_CACHE_DIR=./data/models
LORA_R=16
LORA_ALPHA=32
LORA_DROPOUT=0.075

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256
BCRYPT_ROUNDS=12

# Cors
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_ROTATION=100 MB
LOG_RETENTION=10 days

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60